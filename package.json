{
  "name": "aider-desk",
  "version": "0.54.0-dev",
  "description": "Aider desktop application wrapper",
  "private": true,
  "packageManager": "pnpm@10.29.3",
  "author": "Hotovo",
  "homepage": "https://aiderdesk.hotovo.com",
  "repository": {
    "type": "git",
    "url": "https://github.com/hotovo/aider-desk.git"
  },
  "scripts": {
    "format": "prettier --write .",
    "lint": "eslint .",
    "typecheck": "turbo run typecheck",
    "build": "turbo run build",
    "test": "NODE_ENV=test vitest run --config vitest.config.node.ts && NODE_ENV=test vitest run --config vitest.config.web.ts && NODE_ENV=test vitest run --config vitest.config.mcp.ts",
    "dev": "turbo run dev",
    "clean": "turbo run clean",
    "dev:electron": "turbo run dev:electron --filter=@aider-desk/electron",
    "dev:server": "turbo run dev:server --filter=@aider-desk/node-server",
    "build:electron": "turbo run build:electron --filter=@aider-desk/electron",
    "build:server": "turbo run build:server --filter=@aider-desk/node-server",
    "docker:build": "docker build -t aider-desk-server -f apps/node-server/Dockerfile .",
    "docker:run": "docker run -p 24337:24337 -v aider-desk-data:/app/data aider-desk-server",
    "legacy:typecheck:node": "tsc --noEmit -p tsconfig.node.json --composite false",
    "legacy:typecheck:web": "tsc --noEmit -p tsconfig.web.json --composite false",
    "legacy:typecheck:mcp": "tsc --noEmit -p tsconfig.mcp-server.json --composite false",
    "legacy:typecheck": "npm run legacy:typecheck:node && npm run legacy:typecheck:web && npm run legacy:typecheck:mcp",
    "legacy:start": "electron-vite preview",
    "legacy:dev": "electron-vite dev",
    "legacy:dev:no-hmr": "NO_HMR=true electron-vite dev",
    "legacy:build:mcp": "esbuild src/mcp-server/aider-desk-mcp-server.ts --bundle --platform=node --outdir=out/mcp-server",
    "legacy:prebuild:server": "electron-vite build && npm run legacy:build:mcp",
    "legacy:build:server": "vite build --config vite.config.server.ts && mkdir -p out/resources && cp -r resources/* out/resources",
    "legacy:postbuild:server": "npm rebuild",
    "legacy:build": "npm run legacy:typecheck && electron-vite build && npm run legacy:build:mcp",
    "postinstall": "electron-builder install-app-deps && node scripts/download-uv.mjs && node scripts/download-probe.mjs && patch-package",
    "legacy:build:unpack": "npm run legacy:build && electron-builder --dir",
    "legacy:build:win": "npm run legacy:build && electron-builder --win",
    "legacy:build:mac": "npm run legacy:build && electron-builder --mac",
    "legacy:build:linux": "npm run legacy:build && electron-builder --linux",
    "prepare": "husky",
    "legacy:start:server": "node out/server/runner.js",
    "legacy:test": "npm run legacy:test:node && npm run legacy:test:web",
    "legacy:test:node": "NODE_ENV=test vitest run --config vitest.config.node.ts",
    "legacy:test:web": "NODE_ENV=test vitest run --config vitest.config.web.ts",
    "legacy:test:mcp": "NODE_ENV=test vitest run --config vitest.config.mcp.ts",
    "legacy:test:watch": "concurrently \"npm run legacy:test:node -- --watch\" \"npm run legacy:test:web -- --watch\"",
    "legacy:test:coverage": "npm run legacy:test:node -- --coverage && npm run legacy:test:web -- --coverage",
    "legacy:test:ui": "vitest --config vitest.config.web.ts --ui"
  },
  "devDependencies": {
    "@probelabs/probe": "0.6.0-rc161",
    "ai": "5.0.119",
    "ai-sdk-provider-claude-code": "2.3.0",
    "@electron-toolkit/tsconfig": "^2.0.0",
    "@electron/notarize": "^3.0.2",
    "@eslint/js": "^9.33.0",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.9.1",
    "@testing-library/react": "^16.3.1",
    "@testing-library/user-event": "^14.6.1",
    "@vitejs/plugin-react": "^5.0.4",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "adm-zip": "^0.5.16",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.2.1",
    "electron": "^37.6.0",
    "electron-builder": "^26.0.12",
    "electron-vite": "^4.0.1",
    "esbuild": "^0.25.9",
    "eslint": "^9.18.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-import": "^2.31.0",
    "eslint-plugin-prettier": "^5.2.1",
    "eslint-plugin-react": "^7.37.2",
    "eslint-plugin-react-hooks": "^7.0.0",
    "globals": "^15.9.0",
    "husky": "^9.1.7",
    "jsdom": "^27.3.0",
    "lint-staged": "^15.4.1",
    "node-fetch": "^3.3.2",
    "patch-package": "^8.0.0",
    "prettier": "^3.3.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "sass-embedded": "^1.89.0",
    "tailwind-scrollbar": "^3.1.0",
    "tailwindcss": "^3.4.14",
    "tar": "^7.4.3",
    "turbo": "^2.4.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.46.1",
    "vite": "^7.1.10",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^4.0.16"
  },
  "lint-staged": {
    "*.{ts,tsx}": "pnpm run lint"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@homebridge/node-pty-prebuilt-multiarch",
      "@parcel/watcher",
      "@probelabs/probe",
      "better-sqlite3",
      "cloudflared",
      "electron",
      "electron-winstaller",
      "esbuild",
      "onnxruntime-node",
      "protobufjs",
      "sharp",
      "unrs-resolver"
    ]
  }
}
